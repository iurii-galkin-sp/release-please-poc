{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "body-leading-blank": [2, "always"],
    "scope-enum": [
      2,
      "always",
      [
        "project",
        "activity",
        "payment",
        "activity-schema",
        "payment-schema"
      ]
    ],
    "header-max-length": [2, "always", 72]
  }
}